<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee80deea"
    tools:context="edu.ucsb.cs.cs185.npoon.mydog.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recover my\n Password"
        android:gravity="center"
        android:textSize="50dp"
        android:fontFamily="cursive"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/et_recover_username"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="#77ffffff"
            android:gravity="center"
            android:hint="Enter your username"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_recover_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:hint="Your security question:\n What's your favorite dog?"
            android:layout_marginTop="20dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/et_recover_answer"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="#77ffffff"
            android:gravity="center"
            android:hint="Security answer"
            android:layout_marginTop="15dp"
            android:visibility="invisible"/>


        <TextView
        android:id="@+id/tv_recover_password_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="40dp"
            android:layout_gravity="center"
        android:gravity="center"
        android:text="Your password is"
            android:fontFamily="cursive"
        android:layout_marginTop="20dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_recover_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="password here"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn_recover_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ee80deea"
            android:text="Cancel"/>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_recover_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ee80deea"
            android:text="Submit"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
