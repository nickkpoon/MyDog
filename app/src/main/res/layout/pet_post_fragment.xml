<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_add"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:alpha="10">>
<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:hint="Name"
    android:imeOptions="actionDone"
    android:inputType="text"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:id="@+id/petName"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:theme="@style/MyEditTextStyle"
    android:background="@drawable/text_box_underline_selector"/>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/numberPicker"
        android:layout_marginEnd="8dp"></NumberPicker>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age in months:"
        app:layout_constraintRight_toLeftOf="@+id/numberPicker"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />
    <TextView
        android:layout_width="37dp"
        android:layout_height="16dp"
        android:hint="Size:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/petName"
        android:id="@+id/textView2"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:theme="@style/MyEditTextStyle"
        android:background="@drawable/text_box_underline_selector"
        android:hint="Breed"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_marginTop="199dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/petBreed"
        android:layout_marginStart="8dp" />
    <EditText
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:theme="@style/MyEditTextStyle"
        android:background="@drawable/text_box_underline_selector"
        android:hint="Additional Information"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/petBreed"
        android:id="@+id/petInfo"
        android:inputType="text"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/petImg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneIn" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:id="@+id/button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/petImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.063"
        android:background="@android:color/transparent"
        />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find a Home!"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:background="@android:color/transparent"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/petName"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">

    </RadioGroup>

    <EditText
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:inputType="phone"
        android:id="@+id/phoneIn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/petInfo"
        android:hint="Contact Phone Number"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:theme="@style/MyEditTextStyle"
        android:background="@drawable/text_box_underline_selector"/>

    <RadioButton
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/largePet"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:text="Large"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/medPet" />

    <RadioButton
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/medPet"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:text="Medium"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/smallPet" />

    <RadioButton
        android:id="@+id/smallPet"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:text="Small"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.177" />
</android.support.constraint.ConstraintLayout>
